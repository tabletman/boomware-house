# BoomWare House v2 - Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Anthropic API Key for Claude Vision
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Background Removal (remove.bg)
# Get free API key at: https://www.remove.bg/api
# Free tier: 50 images/month
REMOVE_BG_API_KEY=your_removebg_api_key_here

# eBay API Credentials (for production listing)
# Create app at: https://developer.ebay.com/my/keys
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here
EBAY_SANDBOX=false  # Set to true for testing
EBAY_REDIRECT_URI=https://localhost:3000/callback

# Redis Configuration (for job queue - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Development Settings
NODE_ENV=development